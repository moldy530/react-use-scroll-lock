{
  "rootDir": "../src",
  "testRegex": "/__tests__/.*(-test|-tests|\\.test|\\.tests)\\.(js|ts|tsx)$",
  "testPathIgnorePatterns": [
    "<rootDir>/build/",
    "<rootDir>/dist/",
    "<rootDir>/lib/",
    "/node_modules/",
    "/__integration__/"
  ],
  "transform": {
    "^.+\\.(js|ts|tsx)$": "babel-jest"
  },
  "testEnvironment": "jsdom",
  "setupFiles": [
    "<rootDir>/../jest/setup.js"
  ]
}
